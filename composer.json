{
  "name": "spiral-packages/aula",
  "description": "This is my package aula",
  "keywords": [
    "spiral-packages",
    "spiral",
    "aula"
  ],
  "homepage": "https://github.com/spiral/aula",
  "license": "MIT",
  "authors": [
    {
      "name": "Kirill",
      "email": "kastahov1021@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "nette/php-generator": "^3.6",
    "spiral/boot": "^2.9",
    "spiral/console": "^2.9"
  },
  "require-dev": {
    "mockery/mockery": "^1.5",
    "phpunit/phpunit": "^9.5",
    "spiral/testing": "^1.0",
    "vimeo/psalm": "^4.9"
  },
  "autoload": {
    "psr-4": {
      "Spiral\\Aula\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spiral\\Aula\\Tests\\App\\": "tests/app",
      "Spiral\\Aula\\Tests\\": "tests/src"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "psalm": "vendor/bin/psalm --config=psalm.xml ./src"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "extra": {
    "spiral": {
      "bootloaders": [
        "Spiral\\Aula\\Bootloader\\AulaBootloader"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
